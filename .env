# =============================================================================
# ENVIRONMENT VARIABLES FOR LOCAL DEVELOPMENT
# =============================================================================

# =============================================================================
# LOCAL DATABASE CONFIGURATION
# =============================================================================
# Use your local PostgreSQL credentials
DB_USERNAME=postgres
# <-- IMPORTANT: Change this to your actual local Postgres password
DB_PASSWORD=12345
PG_HOST=localhost
PG_PORT=5432
# A good name for your local database
PG_DATABASE=product-catalog

# Hibernate DDL strategy for local development
DDL_AUTO=update

# =============================================================================
# LOCAL JWT CONFIGURATION
# =============================================================================
# A simple, non-secret key for local testing.
JWT_
JWT_EXPIRATION_MS=86400000

# =============================================================================
# LOCAL SERVER CONFIGURATION
# =============================================================================
PORT=8081

# =============================================================================
# LOCAL FRONTEND CONFIGURATION
# =============================================================================
# The address of your local frontend development server
FRONTEND_URL=http://localhost:5173

# =============================================================================
# DEFAULT ADMIN USER CONFIGURATION
# =============================================================================
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# =============================================================================
# LOCAL LOGGING CONFIGURATION
# =============================================================================
SECURITY_LOG_LEVEL=DEBUG
APP_LOG_LEVEL=DEBUG
# It's helpful to see SQL queries when developing locally
SHOW_SQL=false